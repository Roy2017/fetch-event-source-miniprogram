{
  "name": "fetch-event-source-miniprogram",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:h5": "pnpm run sse:dev & pnpm run -C packages/uni-app dev:h5",
    "dev:uniapp": "pnpm run sse:dev & pnpm run -C packages/uni-app dev:wx",
    "build:h5": "pnpm run -C packages/uni-app build:h5",
    "build:uniapp": "pnpm run -C packages/uni-app build:wx",
    "sse:dev": "node ./packages/uni-app/sse-server",
    "clean": "npx rimraf --glob **/node_modules",
    "preview": "vite preview",
    "commit": "git-cz",
    "lint": "npm run lint:js && npm run lint:style && npm run lint:prettier",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "lint:style": "stylelint src/**/*.{css,scss} --cache --fix",
    "lint:prettier": "prettier --check \"**/*\" --end-of-line auto",
    "lint-staged:js": "eslint --config ./.eslintrc.cjs --ext .js,.jsx,.ts,.tsx --report-unused-disable-directives",
    "changeset": "changeset",
    "packages-version": "changeset version",
    "prepare": "husky",
    "postinstall": "pnpm run -C packages/fetch-event-source-miniprogram build"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": "./.cz-config.cjs"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "npm run lint-staged:js",
    "*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --no-semi --single-quote --write"
    ]
  },
  "dependencies": {
    "ts-md5": "^1.3.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.3",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "commitizen": "^4.3.0",
    "cz-git": "^1.9.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.1.0",
    "stylelint": "^16.3.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "stylelint-order": "^6.0.4",
    "typescript": "^5.4.5"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "postcss",
        "esbuild"
      ],
      "allowedVersions": {
        "rollup": "^4.x"
      },
      "allowAny": [
        "eslint"
      ]
    }
  }
}
